<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarketActivity">

    <Button
        android:id="@+id/updateMarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:text="Update"
        app:layout_constraintStart_toEndOf="@+id/marketName"
        tools:layout_editor_absoluteY="26dp" />

    <EditText
        android:id="@+id/marketName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="29dp" />

    <Button
        android:id="@+id/deleteMarket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Delete"
        app:layout_constraintTop_toBottomOf="@+id/updateMarket"
        tools:layout_editor_absoluteX="258dp"
        tools:visibility="visible" />

    <Button
        android:id="@+id/goProductIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Criar produto"
        app:layout_constraintTop_toBottomOf="@+id/deleteMarket"
        tools:layout_editor_absoluteX="258dp"
        tools:visibility="visible" />

    <ListView
        android:id="@+id/mainListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="250dp"
        app:layout_constraintTop_toBottomOf="@+id/goProductIntent"
        tools:layout_editor_absoluteX="-3dp" />

</android.support.constraint.ConstraintLayout>